{
  "name": "modulo_addition_1layer",
  "display_name": "Modulo Addition (1 Layer)",
  "description": "Single-layer transformer trained on modular arithmetic. Based on Neel Nanda's grokking experiment.",
  "class_type": "families.implementations.modulo_addition_1layer.ModuloAddition1LayerFamily",

  "architecture": {
    "n_layers": 1,
    "n_heads": 4,
    "d_model": 128,
    "d_head": 32,
    "d_mlp": 512,
    "act_fn": "relu",
    "normalization_type": null,
    "n_ctx": 3
  },

  "domain_parameters": {
    "prime": {
      "type": "int",
      "description": "Modulus for the addition task",
      "default": 113
    },
    "seed": {
      "type": "int",
      "description": "Random seed for model initialization",
      "default": 999
    }
  },

  "analyzers": [
    "attention_freq",
    "attention_patterns",
    "dominant_frequencies",
    "neuron_activations",
    "neuron_freq_norm",
    "coarseness"
  ],

  "visualizations": [
    "attention_freq_heatmap",
    "attention_specialization_trajectory",
    "attention_heads_grid",
    "dominant_frequencies_bar",
    "neuron_activation_heatmap",
    "neuron_activation_grid",
    "frequency_clusters_heatmap",
    "specialization_trajectory",
    "specialization_by_frequency",
    "coarseness_trajectory",
    "coarseness_distribution"
  ],

  "analysis_dataset": {
    "type": "modulo_addition_grid",
    "description": "Full (a, b) input grid for modular arithmetic"
  },

  "probes": {
    "probe": {
      "name": "modulo_addition_grid",
      "description": "Full (a, b) input grid for modular arithmetic",
      "method": "get_default_probe"
    }
  },

  "variants": {
    "variant": {
      "name": "",
      "description": "",
      "parameters": {
        "prime": 113,
        "seed": 999
      },
      "checkpoints": [],
      "state": 0
    }
  },

  "variant_pattern": "modulo_addition_1layer_p{prime}_seed{seed}"
}
